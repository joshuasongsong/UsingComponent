<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoogleVoiceActivity">

    <!--CHAPTER23-->
    <Button
        android:id="@+id/Button_Recognition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorPrimary"
        android:text="GO"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TextView_Voice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="你想要做什麼?"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ImageView_Swim"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImageView_Climb"
        app:srcCompat="@drawable/icon_swim" />

    <ImageView
        android:id="@+id/ImageView_Climb"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView_Voice"
        app:srcCompat="@drawable/icon_climb" />

    <ImageView
        android:id="@+id/ImageView_Bike"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ImageView_Swim"
        app:srcCompat="@drawable/icon_bike" />

    <TextView
        android:id="@+id/TextView_Climb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="爬山"
        app:layout_constraintEnd_toEndOf="@+id/ImageView_Climb"
        app:layout_constraintStart_toStartOf="@+id/ImageView_Climb"
        app:layout_constraintTop_toBottomOf="@+id/ImageView_Climb" />

    <TextView
        android:id="@+id/TextView_Swim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="游泳"
        app:layout_constraintEnd_toEndOf="@+id/ImageView_Swim"
        app:layout_constraintStart_toStartOf="@+id/ImageView_Swim"
        app:layout_constraintTop_toBottomOf="@+id/ImageView_Swim" />

    <TextView
        android:id="@+id/TextView_Bike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="騎車"
        app:layout_constraintEnd_toEndOf="@+id/ImageView_Bike"
        app:layout_constraintStart_toStartOf="@+id/ImageView_Bike"
        app:layout_constraintTop_toBottomOf="@+id/ImageView_Bike" />

    <TextView
        android:id="@+id/TextView_Tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="你想爬山？游泳？騎車？"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/Button_Recognition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>